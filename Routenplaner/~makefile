#Compiler
CXX = g++
#Linker
CC = gcc
#Die Flags, mit denen kompiliert werden soll
CXXFLAGS =  -Wall -pedantic -std=c++11
#Die Flags zu Linken
LDFLAGS = 
#Der Name des Programms
NAME = Routenplaner

#Regel zum Linken
all: hello.o
	$(CXX) $^ -o $(NAME)

#Regel zum Kompilieren
%.o: %.cpp %.h
	$(CXX) $(CXXFLAGS) -c  

#Aufbau einer Datei mit den Abhaengigkeiten
dep.make:
	$(CXX) $(CFLAGS) -M Hello.cpp  > $@
