%-----
%Prevents a newline at the beginning of an enumerate when the enumerate is used in the table.
%-----

\newcolumntype{P}[1]{%
    >{\begin{minipage}[t]{#1}\raggedright\arraybackslash}p{#1}<{\end{minipage}}}

%-------------------------------------------------------------------------------
%                \utitle command: Add the title of the use case- Should be short and significant 
%-------------------------------------------------------------------------------
\newcommand\utitle[1]{\hline \\ [-1.5ex] \textit{Use Case} &\textbf{#1}\\ [1ex] \hline \\ [-1.5ex]}
\newcommand\tabularhead{\begin{longtable}{lP{0.75\linewidth}}
}

\newcommand\makeline{\\[1ex] \hline \\ [-1.3ex]} % brake the last line of the column and sets the spaces if used



%----------
%  \udescription: Adds a description of the use case. Can be more than one sentence
%---------
\newcommand\udescription[1]{\textit{Description} &#1 \makeline}

%-----
% \uactors: describes the actor included in the process. Actors can be inserted in the first argument, separated by ','
%-----
\newcommand\uactor[1]{\textit{Actor} &
	\begin{itemize}
		 \@for \xx:=#1 \do{
        			\item \xx %!{#1}
 		   }
		
	 \end{itemize}
	\makeline }

